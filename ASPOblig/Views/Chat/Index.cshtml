<input type="text" id="entry" />

<script>
$(function () {
    $("#entry").keypress(function (event) {
        if (event.which == 13) {
            var date = new Date();
            var time = pad(date.getHours()) + ":" + pad(date.getMinutes());
            $("#chat").append('<p class="message"><span class="timestamp">[' + time + ']</span> <b>Admin</b> ' + $("#entry").val());
            $(".message").fadeIn();
            $("#entry").val("");
        }
    })
})

function pad(n) {
    if (n < 10)
        return "0" + n;
    return n;
}
</script>